<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ListView for displaying the students -->
    <ListView
        android:id="@+id/students_listview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <!-- Right section for class selection and student details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <!-- Spinner for selecting a class -->
        <Spinner
            android:id="@+id/class_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="16dp"/>

        <!-- Section for displaying student details -->
        <TextView
            android:id="@+id/student_last_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="שם משפחה: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/student_first_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="שם פרטי: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/student_birth_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="תאריך לידה: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/student_phone_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="מס' טלפון: "
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
